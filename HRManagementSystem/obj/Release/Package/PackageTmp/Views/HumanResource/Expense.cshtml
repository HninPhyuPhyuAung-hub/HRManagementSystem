


@section css{
    <link href="~/Content/custom.css" rel="stylesheet" />
}
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-10">
        <div class="custom-card">
            <div class="row">
                <div class="col-md-offset-0">

                    <span class="v-bottom" style="font-size:18px;font-weight:500;color:#428af5; padding-right:1200px;">
                        <h1>Manage Expense</h1>
                    </span>
                    @if (ViewBag.memberRole != "Admin")
                    {
                        <button id="addexpense" type="button" class="btn btn-primary btn-sm btn-rounded btnmain" style="visibility:hidden" onclick="InsertExpense()" title="Add New"><i class="fa fa-plus"></i> Add New Expense</button>
                    }
                    else
                    {
                        <button id="addexpense" type="button" class="btn btn-primary btn-sm btn-rounded btnmain" style="background-color:#0000ff;border-color:#47d147;border-color:black" onclick="InsertExpense()" title="Add New"><i class="fa fa-plus"></i> Add New Expense</button>
                    }

                </div>
            </div>
            <br />
            <div class="container-fluid">
                <table id="" class="expense table table-bordered table-striped table-hover" width="100%">
                    <thead>

                        <tr>
                            <th>Expenese Title</th>
                            <th>Description</th>
                            <th>Amount</th>
                            <th>Date</th>
                            @if (ViewBag.memberRole != "Admin")
                            {
                                <th style="visibility:hidden"></th>
                                <th style="visibility:hidden">Edit</th>
                                <th style="visibility:hidden">Delete</th>
                            }
                            else
                            {
                                <th></th>
                                <th>Edit</th>
                                <th>Delete</th>
                            }


                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade slide-down" id="DeleteExpenseModel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="v-cell">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title">Confirm</h4>
                </div>
                <div class="modal-body">
                    Are you sure want to delete?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
                    <button type="button" class="btn btn-primary" onclick="DelExpense()">Yes</button>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="expenseMD">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="modalHeaderSample">Add Expense</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>
            <br />


            <div class="modal-body" id="modalBodySample">
                @model HRManagementSystem.Models.Expense
                @using (Html.BeginForm("AddExpense", "HumanResource", FormMethod.Post, new { @id = "SOFORM" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="form-group">
                                <label for="name">Expesnse Title</label>
                                <input type="text" class="form-control" id="title" name="Title" required="">
                            </div>




                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="form-group">
                                <label for="name">Description</label>
                                <input type="text" class="form-control" id="descriptiion" name="descriptiion" required="">
                            </div>




                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="form-group">
                                <label for="name">Amount</label>
                                <input type="number" class="form-control" id="amount" name="amount" required="">
                            </div>




                        </div>
                    </div>
                    <div class="form-group">
                        <label for="last_date">Date</label>
                        @Html.TextBoxFor(model => model.date, "{0:yyyy-MM-dd}", new { @id = "date", @type = "date", @class = "form-control" })
                    </div>
                    <div class=" form-group text-center">
                        <button class="btn btn-primary mt-2 w-50" style="" type="submit">Submit</button>
                    </div>
                    <input type="hidden" name="ID" value="0" id="expenseid" />
                }
            </div>

        </div>
    </div>
</div>

@section scripts{
    <script src="~/themekit/Moment.min.js"></script>
    <script src="~/themekit/bootstrap-datetimepicker.min.js"></script>
    <script src="https://code.highcharts.com/highcharts.js"></script>
    <script src="https://code.highcharts.com/modules/data.js"></script>
    <script src="https://code.highcharts.com/modules/drilldown.js"></script>

    <link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />

    <script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>
    <script type="text/javascript">
        var role = "@ViewBag.memberRole";
        var ID;
        $(function () {
            expenselist();
        });


        function expenselist() {
            var SetData = $(".expense tbody").empty();

            if ($.fn.DataTable.isDataTable('.expense')) {

                $('.expense').DataTable().clear().destroy();

            }
            if (role != "Admin") {
                $('.expense').DataTable({

                    "ajax": {
                        "url": "/HumanResource/ExpenseList",
                        "type": "GET",
                        "datatype": "json"
                    },
                    "columns": [

                        { "data": "Title" },
                        { "data": "descriptiion" },
                        { "data": "amount" },
                        {
                            "data": "date", render: function (data, type, row) {
                                if (type === "sort" || type === "type") {
                                    return data;
                                }
                                return moment(data).format("MM-DD-YYYY");
                            }
                        },
                        { className: "hide", data: 'ID' },
                        { className: "hide", data: 'ID' },
                        { className: "hide", data: 'ID' }
                       

                    ]

                });
            }
            else {
                $('.expense').DataTable({

                    "ajax": {
                        "url": "/HumanResource/ExpenseList",
                        "type": "GET",
                        "datatype": "json"
                    },
                    "columns": [

                        { "data": "Title" },
                        { "data": "descriptiion" },
                        { "data": "amount" },
                        {
                            "data": "date", render: function (data, type, row) {
                                if (type === "sort" || type === "type") {
                                    return data;
                                }
                                return moment(data).format("MM-DD-YYYY");
                            }
                        },
                        { className: "hide", data: 'ID' },
                        {

                            "mRender": function (data, type, row) {
                                return '<a href="#" class="editor_remove" onclick="EditExpense(' + row.ID + ', \'' + row.Title + '\' , \'' + row.descriptiion + ' \', \'' + row.amount + '\', \'' + row.date + '\')">Edit</a>'


                            }
                        }, {

                            "mRender": function (data, type, row) {
                                return '<a href="#" class="editor_remove" onclick="DeleteExpense(' + row.ID + ')">Delete</a>'


                            }
                        }

                    ]

                });
            }
           
        }
        function EditExpense(Id, Title, descriptiion,amount,date) {

            date = moment(date).format("YYYY-MM-DD");
            //alert(Id);
            //alert(Title);
            //alert(descriptiion);
            //alert(amount);
            //alert(date);
            $('#expenseid').val(Id);
            $('#title').val(Title);
            $('#amount').val(amount);
            $('#descriptiion').val(descriptiion);
            
            $('#date').val(date);
            $('#expenseMD').modal('show');

        }
        function InsertExpense() {
            $('#expenseid').val(null);
            $('#title').val(null);
            $('#amount').val(null);
            $('#descriptiion').val(null);

            $('#date').val(null);
            $('#expenseMD').modal('show');
        }
        function DeleteExpense(Id) {
            ID = Id;
            $('#DeleteExpenseModel').modal('show');
        }


        function DelExpense() {
            $.ajax({
                cache: false,
                url: '@Url.Action("DeleteExpense", "HumanResource")',
                data: { ID: ID },
                beforeSend: function () {
                    $('#DeleteExpenseModel').modal('hide');
                },
                success: function (myData) {


                },

                complete: function () {
                    expenselist();
                }
            });
        }
    </script>
}