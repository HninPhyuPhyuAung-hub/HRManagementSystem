<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-10">
        <div class="custom-card">
            <div class="container-fluid">
                <!-- start page title -->
                <div class="row mt-3">
                    <div class="col-12">
                        <div class="page-title-box page-title-box-sm">
                            <h3 class="page-title"><i class=""></i>Private Message	            </h3>
                        </div>
                    </div>
                </div>
                <!-- end page title -->

                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3">

                                <!-- compose new email button -->
                                <div class="">
                                    <button class="btn btn-sm btnmain text-white" style="background-color:#4286f4;border-color:#adbdd6" onclick="NewMessage()">New Message</button>
                                </div>
                                <hr>


                                <!-- message user inbox list -->

                            </div>
                            <div class="message custom-card" style="visibility:hidden">
                                @using (Html.BeginForm("SendMessage", "HumanResource", FormMethod.Post, new { @id = "SOFORM" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                        <div class="mail-header" style="padding-bottom: 27px ;">
                                            <!-- title -->
                                            <h3 class="mail-title">
                                                Write New Message
                                            </h3>
                                        </div>

                                        <div class="mail-compose">

                                            <div class="form-group">
                                                <div class="row">
                                                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                        <div class="form-group">

                                                            @{
                                                                var email = new List<SelectListItem>()
                                                                {

                                                                };
                                                            }

                                                            <select name="email" class="form-control selectboxit" id="email" value="email"></select>
                                                        </div>

                                                    </div>
                                                </div>

                                                <div class="row">
                                                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                        <div class="form-group">
                                                            <label for="name">Subject</label>
                                                            <input type="text" class="form-control" id="subject" name="subject" required="">
                                                        </div>




                                                    </div>
                                                </div>
                                                <div class="compose-message-editor">
                                                    <textarea rows="5" class="form-control wysihtml5" data-stylesheet-url="assets/css/wysihtml5-color.css"
                                                              name="message" placeholder="Write Your Message"
                                                              id="sample_wysiwyg"></textarea>
                                                </div>
                                                @if (ViewBag.Role != "Admin")
                                                {
                                                    <div class="row">
                                                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                            <div class="form-group">
                                                                <label for="name">Enter Your Password</label>
                                                                <input type="password" class="form-control" id="Password" name="Password" required="">
                                                            </div>




                                                        </div>
                                                    </div>
                                                }
                                                <br />
                                                <button type="submit" class="btn btn-sm btnmain text-white" style="align-content:center">
                                                    Send Message        <i class="entypo-mail"></i>

                                                </button>
                                            </div>
                                        </div>

                                        @* @{TempData["Data2"] = ViewBag.EmpId}*@
                                        <input type="hidden" name="Role" value="@ViewBag.Role" id="Role" />
                                        <input type="hidden" name="EmpId" value="@ViewBag.EmpId" id="EmpId" />
                                        <input type="hidden" name="ID" value="0" id="messageid" />
                                        <input type="hidden" name="sendmail" value="hninphyuphyuaung1994@gmail.com" id="sendmailid" />
                                    </div>
                                }
                            </div>

                        </div>

                    </div>
                </div>
            </div>



            <script type="text/javascript">
    var role = "@ViewBag.Role";
    var EmpId = "@ViewBag.EmpId";
    function NewMessage() {



        $.ajax({

                cache: false,
            url: '@Url.Action("getEmail", "HumanResource")',
            data: { EmpId: EmpId ,Role:role},
                beforeSend: function () {
                    document.getElementsByClassName('message')[0].style.visibility = 'hidden';
                },
                success: function (result) {

                    if (result != null) {
                        $("#email").empty();
                        $("#email").append($('<option value=""> -- Choose -- </option>'));
                        for (i = 0; i < result.length; i++) {
                            $('#email').append($('<option value="' + result[i].Value + '">' + result[i].Value + '</option>>'));
                        }
                    }
                    console.log(result);
                    $('.email').val($('.statehidden').val());

                },

                complete: function () {


                    document.getElementsByClassName('message')[0].style.visibility = 'visible';
                }
            });
        }

            </script>



        </div>
    </div>
</div>
    