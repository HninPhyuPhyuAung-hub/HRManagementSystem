
@section css{
    <link href="~/themekit/css/bootstrap-datetimepicker.min.css" rel="stylesheet" />
    <link href="~/assets/css/icons/fontawesome/styles.min.css" rel="stylesheet" />
    <link href="~/Content/custom.css" rel="stylesheet" />
}





<div class="container-fluid">

    <!-- start page title -->
    <div class="row mt-3">
        <div class="col-12">
            <div class="page-title-box page-title-box-sm">
                <h1 class="page-title"><i class=""></i>Dashboard                </h1>
            </div>
        </div>
    </div>
    <!-- end page title -->

    <div class="row">

        

        <div class="col-md-12">
           <div class="col-md-2"></div>
            <div class="col-md-3">
                <!-- Members online -->
                <div class="custom-card ref-card" style="background-color:cornflowerblue">
                    <div class="row">
                        <div class="col-md-4 text-center pt-20">
                            <i class="fa fa-calendar-o cl-green"></i>
                        </div>
                        <div class="col-md-8">
                            <h1 class="no-margin" id="TDREF">0</h1>
                            <span class="text-uppercase text-muted">TOTAL EMPLOYEE</span>
                        </div>
                    </div>
                </div>
                <!-- /members online -->
            </div>
            <div class="col-md-3">
                <!-- Current server load -->
                <div class="custom-card ref-card" style="background-color:yellow">
                    <div class="row">
                        <div class="col-md-4 text-center pt-20">
                            <i class="fa fa-users cl-red"></i>
                        </div>
                        <div class="col-md-8">
                            <h1 class="no-margin" id="TTREF">0</h1>
                            <span class="text-uppercase text-muted">PRESENT TODAY</span>
                        </div>
                    </div>
                </div>
                <!-- /current server load -->
            </div>
            <div class="col-md-3">
                <!-- Today's revenue -->
                <div class="custom-card ref-card" style="background-color:red">
                    <div class="row">
                        <div class="col-md-4 text-center pt-20">
                            <i class="fa fa-calendar-o cl-blue"></i>
                        </div>
                        <div class="col-md-8 ref-card">
                            <h1 class="no-margin" id="YESREF">0</h1>
                            <span class="text-uppercase text-muted">ON LEAVE</span>
                        </div>
                    </div>
                </div>
                <!-- /today's revenue -->
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/themekit/Moment.min.js"></script>
    <script src="~/themekit/bootstrap-datetimepicker.min.js"></script>
    <script src="https://code.highcharts.com/highcharts.js"></script>
    <script src="https://code.highcharts.com/modules/data.js"></script>
    <script src="https://code.highcharts.com/modules/drilldown.js"></script>

   

    <script type="text/javascript">
        $(function () {
         totalemployee()
        })
        function totalemployee() {
            $.ajax({
                cache: false,
                url: '@Url.Action("totalemployee","HumanResource")',
                data: {},
                beforeSend: function () {
                },
                success: function (myData) {
                    $('#TDREF').empty().append(myData.totalemployee)
                    $('#TTREF').empty().append(myData.present)
                    $('#YESREF').empty().append(myData.leave)
                },
                complete: function () {

                }
            });
        }
        </script>
}