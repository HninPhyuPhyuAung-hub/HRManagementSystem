
@model HRManagementSystem.Models.ResetPasswordViewModel

<!DOCTYPE html>
<html lang="en">
@{
    Layout = null;
}
<head>
    <style>
        .form-gap {
            padding-top: 70px;
        }
    </style>
</head>
<body style="background-image: url('../../Image/bright-green-tropical-plant-leaf-texture-background_29411-31.jpg');">
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <!------ Include the above in your HEAD tag ---------->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <div class="form-gap"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="text-center">
                            <h3><i class="fa fa-lock fa-4x"></i></h3>
                          
                            <p>You can change your password here!</p>
                            <div class="panel-body">

                                @using (Html.BeginForm("ResetPassword", "UserLogin", FormMethod.Post, new { role = "form" }))
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-group has-feedback has-feedback-left">
                                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control", placeholder = "New Password", required = "required", type = "password" })
                                        <div class="form-control-feedback">
                                            <i style="padding-top:12px" class="icon-lock2 text-muted"></i>
                                        </div>
                                    </div>
                                    <div class="form-group has-feedback has-feedback-left">
                                        @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Password", required = "required", type = "password" })
                                        <div class="form-control-feedback">
                                            <i style="padding-top:12px" class="icon-lock2 text-muted"></i>
                                        </div>
                                    </div>
                                    <span class="text-warning">@ViewBag.errormsg</span>
                                    <div class="form-group">
                                        <input name="recover-submit" class="btn btn-lg btn-primary btn-block" value="Change Password" type="submit">
                                    </div>
                                    <div class="form-group mb-10">
                                        <div class="">
                                            <span class="text-warning">@ViewBag.sendmessage</span>
                                        </div>
                                    </div>
                                    @Html.HiddenFor(a => a.Email)
                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
