
@section css{
    <link href="~/Content/custom.css" rel="stylesheet" />
  
}
<div class="custom-card">
    <div class="row">
        <div class="col-md-offset-2">

            <span class="v-bottom" style="font-size:18px;font-weight:500;color:#428af5; padding-right:1200px;">
                <h1>Department List</h1>
            </span>

            <button id="addleave" type="button" class="btn btn-primary btn-sm btn-rounded btnmain" style="background-color:#0000ff;border-color:#47d147;border-color:black" onclick="InsertDepartment()" title="Add New"><i class="fa fa-plus"></i> Add New Department</button>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-10"><div class="container-fluid">
    <table id="" class="department table table-bordered table-striped table-hover" width="100%">
        <thead>
            <tr>
                <th>DepartmentName</th>
                <th>TotalEmployee</th>
                <th></th>
                <th>Edit</th>
                <th>Delete</th>

            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div></div>
        
    </div>
    
</div>
<div class="modal fade slide-down" id="DeleteDepModel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="v-cell">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title">Confirm</h4>
                </div>
                <div class="modal-body">
                    Are you sure want to delete?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
                    <button type="button" class="btn btn-primary" onclick="DelDep()">Yes</button>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="departmentMD">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="modalHeaderSample">Add Department</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>
            <br />


            <div class="modal-body" id="modalBodySample">
                @using (Html.BeginForm("AddDepartment", "HumanResource", FormMethod.Post, new { @id = "SOFORM" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="form-group">
                                <label for="name">Department Name</label>
                                <input type="text" class="form-control" id="name" name="DpName" required="">
                            </div>




                        </div>
                    </div>
                    <div class=" form-group text-center">
                        <button class="btn btn-primary mt-2 w-50" style="" type="submit">Submit</button>
                    </div>
                    <input type="hidden" name="Id" value="0" id="depid" />
                }
            </div>

        </div>
    </div>
</div>

@section scripts{
    <script src="~/themekit/Moment.min.js"></script>
    <script src="~/themekit/bootstrap-datetimepicker.min.js"></script>
    <script src="https://code.highcharts.com/highcharts.js"></script>
    <script src="https://code.highcharts.com/modules/data.js"></script>
    <script src="https://code.highcharts.com/modules/drilldown.js"></script>

    <link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />

    <script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>
    <script type="text/javascript">

        var DepId;
        $(function () {
            departmentlist();
        });


        function departmentlist() {
            var SetData = $(".department tbody").empty();

            if ($.fn.DataTable.isDataTable('.department')) {

                $('.department').DataTable().clear().destroy();

            }

            $('.department').DataTable({

                "ajax": {
                    "url": "/HumanResource/DepartmentList",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [

                    { "data": "Department" },
                    { "data": "Count" },

                    { className: "hide", data: 'Id' },
                    {

                        "mRender": function (data, type, row) {
                            return '<a href="#" class="editor_remove" onclick="EditDepartment(' + row.Id + ', \'' + row.Department + '\')">Edit</a>'


                        }
                    }, {

                        "mRender": function (data, type, row) {
                            return '<a href="#" class="editor_remove" onclick="DeleteDepartment(' + row.Id + ')">Delete</a>'


                        }
                    }

                ]

                    });
        }
        function EditDepartment(Id,Department) {
          //  alert(Id);
          //  alert(Department);
            $('#name').val(Department);
            $('#depid').val(Id);

            $('#departmentMD').modal('show');

        }
        function InsertDepartment() {
              $('#departmentMD').modal('show');
        }
        function DeleteDepartment(Id) {
            DepId = Id;
            $('#DeleteDepModel').modal('show');
        }


        function DelDep() {
            $.ajax({
                cache: false,
                url: '@Url.Action("DeleteDepartment", "HumanResource")',
                data: { DepId: DepId },
                beforeSend: function () {
                    $('#DeleteDepModel').modal('hide');
                },
                success: function (myData) {


                },

                complete: function () {
                    departmentlist();
                }
            });
        }
    </script>
}