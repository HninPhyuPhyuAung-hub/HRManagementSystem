                </div>
            </div>
        </div>

        @section scripts{
            <script src="~/themekit/Moment.min.js"></script>
            <script src="~/themekit/bootstrap-datetimepicker.min.js"></script>
            <script src="https://code.highcharts.com/highcharts.js"></script>
            <script src="https://code.highcharts.com/modules/data.js"></script>
            <script src="https://code.highcharts.com/modules/drilldown.js"></script>
            <link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
            <link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
            <script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
            <script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>
            <script type="text/javascript">

                    var AppId;
                    var status;

                $(function () {
                applicationlist();
              });

                    function applicationlistnew(status) {
                        status = status;
                       // alert(status);
                        applicationlist(status);
                    }

                    function applicationlist(status) {
                    var SetData = $(".application tbody").empty();
                        if ($.fn.DataTable.isDataTable('.application'))
                        {
                      $('.application').DataTable().clear().destroy();
                        }
            $('.application').DataTable({
                "ajax": {
                    url: "/Application/ApplicationList",
                    type: "POST",
                    data: {
                        "status": status
                    },
                    datatype: "json"
                },
                "columns": [
                    { "data": "ApplicantName" },
                    { "data": "Position" },
                    {
                        "data": "Date", render: function (data, type, row) {
                            if (type === "sort" || type === "type") {
                                return data;
                            }
                            return moment(data).format("MM-DD-YYYY");
                        }
                    },
                    { "data": "Status" },
                    { className: "hide", data: 'AppId' },
                    {
                        "mRender": function (data, type, row) {
                            return '<a href="#" class="editor_remove" onclick="EditApp(' + row.AppId + ', \'' + row.Position + '\' , \'' + row.ApplicantName + ' \', \'' + row.Date + '\', \'' + row.Status + ' \')">Edit</a>'
                  }
                    }, {

                        "mRender": function (data, type, row) {
                            return '<a href="#" class="editor_remove" onclick="DeleteApp(' + row.AppId + ')">Delete</a>'
                        }
                    }
                ]
                    });
    }

       function EditApp(Id, Position, ApplicantName, Date,Status) {
           // alert(Id);
           // alert(Position);
           //             alert(ApplicantName);
           //             alert(Date);
           //alert(Status);
           Date = moment(Date).format("YYYY-MM-DD");
            $('#AppId').val(Id);
            $('#position').val(Position);
           $('#applicantname').val(ApplicantName);
           $('#date').val(Date);
           //Status = "Hired";
           var aaa = null;
           aaa = $.trim(Status);
           $('#applicationMD').modal('show');
           $('#selectstatus').val(aaa);
           //$('#Status1 select').val(Status);
                }

        function InsertApplication() {
            $('#AppId').val(null);
            $('#position').val(null);
            $('#applicantname').val(null);
            $('#date').val(null);
            $('#Status').val(null);
            $('#applicationMD').modal('show');
        }

                function DeleteApp(Id) {
                        AppId = Id;
            $('#DeleteappModel').modal('show');
                }

              function DelApp() {
            $.ajax({
                cache: false,
                url: '@Url.Action("DeleteApplication", "Application")',
                data: { AppId: AppId },
                beforeSend: function () {
                    $('#DeleteappModel').modal('hide');
                },
                success: function (myData) {

                },
                complete: function () {
                    applicationlist();
                }
            });
        }
            </script>
        }
